3. Считать из текстового файла целые числа и занести их в вектор. Вывести вектор на экран. 
Вставить перед всеми отрицательными элементами вектора значение 0 и снова вывести вектор на экран. 

#include <iostream>
#include <fstream>
#include <vector>

using namespace std;

int main() {
    ifstream inputFile("input.txt"); 
    if (!inputFile.is_open()) { 
        cout << "Не удалось открыть файл!" << endl;
        return 1;
    }

    vector<int> vec;

    int num;
    while (inputFile >> num) { 
        vec.push_back(num);
    }

    inputFile.close(); 

    cout << "Исходный вектор: ";
    for (int i = 0; i < vec.size(); i++) {
        cout << vec[i] << " ";
    }
    cout << endl;

    for (int i = 0; i < vec.size(); i++) {
        if (vec[i] < 0) {
            vec.insert(vec.begin() + i, 0);
            i++; // увеличиваем i на 1, чтобы пропустить только что вставленный 0
        }
    }

    cout << "Измененный вектор: ";
    for (int i = 0; i < vec.size(); i++) {
        cout << vec[i] << " ";
    }
    cout << endl;

    return 0;
}
